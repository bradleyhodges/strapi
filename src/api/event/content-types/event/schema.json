{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "EventStart": {
      "type": "datetime",
      "required": true
    },
    "EventEnd": {
      "type": "datetime"
    },
    "Description": {
      "type": "string",
      "required": true,
      "maxLength": 300
    },
    "Body": {
      "type": "blocks"
    },
    "CanonicalSlug": {
      "type": "uid",
      "targetField": "Title",
      "required": true
    },
    "CoverImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "AllowRegistration": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
